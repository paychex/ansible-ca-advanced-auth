[Unit]
Description=CA Risk Auth Server
After=network.target

[Service]
Type=forking
EnvironmentFile=/etc/sysconfig/arcot
ExecStart={{ arcot_home }}/bin/riskfortserver start
ExecStop={{ arcot_home }}/bin/riskfortserver stop

WorkingDirectory={{ arcot_home }}

User={{ arcot_user }}
Group={{ arcot_user }}

[Install]
WantedBy=multi-user.target
